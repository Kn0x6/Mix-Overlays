<UserControl x:Class="MixOverlays.Views.PlayerCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:MixOverlays.Converters">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter             x:Key="BoolVis"/>
        <conv:InverseBoolToVisibilityConverter      x:Key="InvBoolVis"/>
        <conv:WinLossBrushConverter                 x:Key="WinLossBrush"/>
        <conv:WinLossTextConverter                  x:Key="WinLossText"/>
        <conv:RankTierBrushConverter                x:Key="RankBrush"/>
        <conv:KdaBrushConverter                     x:Key="KdaBrush"/>
        <conv:WinRateBrushConverter                 x:Key="WinRateBrush"/>
        <conv:DoubleFormatConverter                 x:Key="DblFmt"/>
        <conv:PercentFormatConverter                x:Key="PctFmt"/>
        <conv:MasteryPointsConverter                x:Key="MasteryPts"/>
        <conv:GameDurationConverter                 x:Key="GameDuration"/>
        <conv:TimeAgoConverter                      x:Key="TimeAgo"/>
        <conv:UrlToImageSourceConverter             x:Key="UrlToImg"/>
        <conv:UrlToImageSourceWithFallbackConverter x:Key="UrlToImgWithFallback"/>
        <conv:ChampionNameToImageConverter          x:Key="ChampToImg"/>
        <conv:ChampionIdToImageConverter            x:Key="ChampIdToImg"/>
        <conv:SummonerSpellIdToImageConverter       x:Key="SpellToImg"/>
        <conv:RuneIdToImageConverter                x:Key="RuneToImg"/>
        <conv:ChampionNameToSplashConverter         x:Key="ChampSplash"/>
        <conv:HexStringToBrushConverter              x:Key="HexBrush"/>
    </UserControl.Resources>

    <Border Background="{StaticResource BgCardBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1" CornerRadius="10" Margin="0,0,0,8">
        <Grid>
            <!-- Splash art background -->
            <Border CornerRadius="10" ClipToBounds="True" Opacity="0.13"
                    Visibility="{Binding IsLoaded, Converter={StaticResource BoolVis}}">
                <Image Source="{Binding TopChampionName, Converter={StaticResource ChampSplash}}"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
            </Border>

            <!-- Loading -->
            <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolVis}}"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Margin="20" Opacity="0.6">
                <TextBlock Text="⏳ Chargement..."
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="13" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- ══ Contenu chargé ══ -->
            <Grid Visibility="{Binding IsLoaded, Converter={StaticResource BoolVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>     <!-- Gauche : header + contenu principal -->
                    <ColumnDefinition Width="200"/>   <!-- Droite : panneau STATS RÉCENTES -->
                </Grid.ColumnDefinitions>

                <!-- ═══════════════════════════════════════════════════════ -->
                <!--  COLONNE GAUCHE                                         -->
                <!-- ═══════════════════════════════════════════════════════ -->
                <Expander Grid.Column="0" IsExpanded="True">
                    <Expander.Style>
                        <Style TargetType="Expander">
                            <Setter Property="Margin" Value="0,32,0,0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasError}" Value="False">
                                    <Setter Property="Margin" Value="0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Expander.Style>

                    <Expander.Header>
                        <Grid Margin="4,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="56"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar -->
                            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="24"
                                    BorderBrush="{Binding SoloRank.tier, Converter={StaticResource RankBrush}}"
                                    BorderThickness="2" ClipToBounds="True">
                                <Image Source="{Binding ProfileIconUrl, Converter={StaticResource UrlToImgWithFallback}}"
                                       Stretch="UniformToFill"/>
                            </Border>

                            <!-- Name + Rank -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding GameName}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontWeight="SemiBold" FontSize="15"/>
                                    <TextBlock Text="#" Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="13" Margin="3,2,0,0"/>
                                    <TextBlock Text="{Binding TagLine}"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="13" Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- Rank row -->
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <Border CornerRadius="4" Padding="7,2" Margin="0,0,6,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SoloRank}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="13" FontWeight="Bold"
                                                   Foreground="{Binding SoloRank.tier, Converter={StaticResource RankBrush}}">
                                            <Run Text="{Binding SoloRank.tier, Mode=OneWay}"/>
                                            <Run Text=" "/>
                                            <Run Text="{Binding SoloRank.rank, Mode=OneWay}"/>
                                            <Run Text=" — "/>
                                            <Run Text="{Binding SoloRank.leaguePoints, Mode=OneWay}"/>
                                            <Run Text=" LP"/>
                                        </TextBlock>
                                    </Border>
                                    <TextBlock Text="Non classé"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="13" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SoloRank}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <!-- EN PARTIE indicator -->
                                <Border CornerRadius="4" Padding="7,3" Margin="0,4,0,0"
                                        Background="#108B5CF6" BorderBrush="#408B5CF6" BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsInGame}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="7" Height="7" Fill="#8B5CF6"
                                                 Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="EN PARTIE" FontSize="11" FontWeight="Bold"
                                                   Foreground="#8B5CF6" VerticalAlignment="Center"/>
                                        <TextBlock Text=" · " Foreground="#608B5CF6"
                                                   FontSize="11" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding CurrentChampionName}" FontSize="11"
                                                   Foreground="#AA8B5CF6" VerticalAlignment="Center"/>
                                        <TextBlock Text=" · " Foreground="#608B5CF6"
                                                   FontSize="11" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding LiveTimerDisplay}" FontSize="11"
                                                   FontWeight="SemiBold" Foreground="#8B5CF6"
                                                   VerticalAlignment="Center" FontFamily="Consolas"/>
                                    </StackPanel>
                                </Border>

                                <!-- Lanes -->
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0"
                                            Visibility="{Binding HasLaneData, Converter={StaticResource BoolVis}}">
                                    <TextBlock Text="Lanes : " FontSize="11"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               VerticalAlignment="Center"/>
                                    <Border CornerRadius="4" Padding="7,2" Margin="0,0,5,0"
                                            Background="#20388BFD" BorderBrush="#40388BFD" BorderThickness="1">
                                        <TextBlock Text="{Binding PrimaryLane}" FontSize="11" FontWeight="SemiBold"
                                                   Foreground="#388BFD"/>
                                    </Border>
                                    <Border CornerRadius="4" Padding="7,2"
                                            Background="#15AAAAAA" BorderBrush="#30AAAAAA" BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SecondaryLane}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding SecondaryLane}" FontSize="11"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <!-- WinRate ranked + bouton voir partie -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="8,0">
                                <TextBlock HorizontalAlignment="Right"
                                           Foreground="{Binding SoloWinRate, Converter={StaticResource WinRateBrush}}"
                                           FontSize="16" FontWeight="Bold"
                                           Text="{Binding SoloWinRate, Converter={StaticResource PctFmt}}"/>
                                <TextBlock HorizontalAlignment="Right" FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}">
                                    <Run Text="{Binding SoloWins, Mode=OneWay}"/>
                                    <Run Text="V " Foreground="#3FB950"/>
                                    <Run Text="{Binding SoloLosses, Mode=OneWay}"/>
                                    <Run Text="D" Foreground="#F85149"/>
                                </TextBlock>
                                <Button HorizontalAlignment="Right" Margin="0,4,0,0"
                                        Padding="8,3" FontSize="11" Cursor="Hand"
                                        Visibility="{Binding IsInGame, Converter={StaticResource BoolVis}}"
                                        Command="{Binding DataContext.ViewLiveGameCommand,
                                                  RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background"  Value="#1A8B5CF6"/>
                                            <Setter Property="Foreground"  Value="#8B5CF6"/>
                                            <Setter Property="BorderBrush" Value="#408B5CF6"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock Text="Voir la partie" FontSize="11"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <!-- ── BODY gauche ── -->
                    <StackPanel Margin="12,0,12,12">
                        <Separator/>

                        <!-- TOP CHAMPIONS -->
                        <TextBlock Text="TOP CHAMPIONS"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="11" FontWeight="SemiBold" Margin="0,8,0,6"/>
                        <ItemsControl ItemsSource="{Binding TopMasteries}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,14,0" HorizontalAlignment="Center">
                                        <Border Width="42" Height="42" CornerRadius="21" ClipToBounds="True"
                                                BorderBrush="#40FFFFFF" BorderThickness="1">
                                            <Image Source="{Binding ChampionName, Converter={StaticResource ChampToImg}}"
                                                   Stretch="UniformToFill"/>
                                        </Border>
                                        <TextBlock Text="{Binding championPoints, Converter={StaticResource MasteryPts}}"
                                                   FontSize="11" HorizontalAlignment="Center"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding ChampionName}"
                                                   FontSize="10" HorizontalAlignment="Center"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- PARTIES RÉCENTES -->
                        <TextBlock Text="PARTIES RÉCENTES"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="11" FontWeight="SemiBold" Margin="0,8,0,4"/>

                        <ItemsControl ItemsSource="{Binding RecentMatches}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,2" Cursor="Hand" CornerRadius="6"
                                            Background="Transparent">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick"
                                                          Command="{Binding DataContext.OpenMatchDetailCommand,
                                                                    RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource BgHoverBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid Margin="4,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="65"/>
                                                <ColumnDefinition Width="44"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- V/D -->
                                            <Border Grid.Column="0" CornerRadius="4" Margin="0,1,6,1"
                                                    Background="{Binding Win, Converter={StaticResource WinLossBrush}}">
                                                <TextBlock Text="{Binding Win, Converter={StaticResource WinLossText}}"
                                                           Foreground="White" FontSize="12" FontWeight="Bold"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- ChampIcon + Sorts + Rune + vs + Opponent -->
                                            <StackPanel Grid.Column="1" Orientation="Horizontal"
                                                        VerticalAlignment="Center" Margin="0,0,8,0">
                                                <Border Width="36" Height="36" CornerRadius="18" ClipToBounds="True">
                                                    <Image Source="{Binding ChampionName, Converter={StaticResource ChampToImg}}"
                                                           Stretch="UniformToFill"/>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center" Margin="3,0,6,0">
                                                    <Border Width="16" Height="16" CornerRadius="3" ClipToBounds="True" Margin="0,0,0,2">
                                                        <Image Source="{Binding Summoner1Id, Converter={StaticResource SpellToImg}}" Stretch="UniformToFill"/>
                                                    </Border>
                                                    <Border Width="16" Height="16" CornerRadius="3" ClipToBounds="True">
                                                        <Image Source="{Binding Summoner2Id, Converter={StaticResource SpellToImg}}" Stretch="UniformToFill"/>
                                                    </Border>
                                                </StackPanel>
                                                <Border Width="30" Height="30" CornerRadius="15"
                                                        Background="#CC0D1117"
                                                        BorderBrush="#40FFFFFF" BorderThickness="1"
                                                        ClipToBounds="True"
                                                        VerticalAlignment="Center" Margin="4,0,0,0">
                                                    <Image Source="{Binding PrimaryRuneId, Converter={StaticResource RuneToImg}}"
                                                           Stretch="Uniform" Margin="1"/>
                                                </Border>
                                                <TextBlock Text="vs" FontSize="10" FontWeight="SemiBold"
                                                           Foreground="#6B7280"
                                                           VerticalAlignment="Center" Margin="6,0"/>
                                                <Border Width="36" Height="36" CornerRadius="18" ClipToBounds="True">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding OpponentChampionId}" Value="0">
                                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Image Source="{Binding OpponentChampionId, Converter={StaticResource ChampIdToImg}}"
                                                           Stretch="UniformToFill"
                                                           ToolTip="{Binding OpponentChampionName}"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- K/D/A + CS + Mode -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,6,0">
                                                <TextBlock FontSize="13">
                                                    <Run Text="{Binding Kills, Mode=OneWay}"
                                                         Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                                    <Run Text="/" Foreground="{StaticResource TextMutedBrush}"/>
                                                    <Run Text="{Binding Deaths, Mode=OneWay}" Foreground="#F85149" FontWeight="SemiBold"/>
                                                    <Run Text="/" Foreground="{StaticResource TextMutedBrush}"/>
                                                    <Run Text="{Binding Assists, Mode=OneWay}"
                                                         Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,6,0">
                                                        <Run Text="{Binding CS, Mode=OneWay}"/>
                                                        <Run Text=" CS"/>
                                                    </TextBlock>
                                                    <Border CornerRadius="3" Padding="4,1">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#20AAAAAA"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding QueueId}" Value="420">
                                                                        <Setter Property="Background" Value="#203B82F6"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding QueueId}" Value="440">
                                                                        <Setter Property="Background" Value="#2010B981"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding QueueId}" Value="450">
                                                                        <Setter Property="Background" Value="#208B5CF6"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding GameModeDisplay}"
                                                                   FontSize="10" FontWeight="SemiBold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding QueueId}" Value="420">
                                                                            <Setter Property="Foreground" Value="#3B82F6"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding QueueId}" Value="440">
                                                                            <Setter Property="Foreground" Value="#10B981"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding QueueId}" Value="450">
                                                                            <Setter Property="Foreground" Value="#8B5CF6"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- KDA ratio -->
                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock VerticalAlignment="Center"
                                                           Text="{Binding KDA, Converter={StaticResource DblFmt}, Mode=OneWay}"
                                                           Foreground="{Binding KDA, Converter={StaticResource KdaBrush}}"
                                                           FontSize="13" FontWeight="SemiBold"/>
                                                <TextBlock Text=" KDA" VerticalAlignment="Center"
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           FontSize="10" Margin="2,1,0,0"/>
                                            </StackPanel>

                                            <!-- Durée -->
                                            <TextBlock Grid.Column="4" VerticalAlignment="Center"
                                                       Text="{Binding GameDuration, Converter={StaticResource GameDuration}}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11" Margin="4,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Charger plus -->
                        <Button Margin="0,6,0,2" HorizontalAlignment="Center"
                                Command="{Binding DataContext.LoadMoreMatchesCommand,
                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Background"  Value="#1AFFFFFF"/>
                                    <Setter Property="Foreground"  Value="{StaticResource TextSecondaryBrush}"/>
                                    <Setter Property="BorderBrush" Value="#30FFFFFF"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding"     Value="16,5"/>
                                    <Setter Property="FontSize"    Value="12"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#30FFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasMoreMatches}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsLoadingMoreMatches}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Margin="0,0,6,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text"       Value=""/>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLoadingMoreMatches}" Value="True">
                                                    <Setter Property="Text"       Value="⏳"/>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="⬇ Charger 10 parties suivantes"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLoadingMoreMatches}" Value="True">
                                                    <Setter Property="Text" Value="Chargement..."/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Expander>

                <!-- ═══════════════════════════════════════════════════════ -->
                <!--  COLONNE DROITE — STATS RÉCENTES                        -->
                <!-- ═══════════════════════════════════════════════════════ -->
                <Border Grid.Column="1"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,0,0,0"
                        Background="#08FFFFFF">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="14,12,14,12">

                            <!-- Header -->
                            <TextBlock Text="STATS RÉCENTES"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="10" FontWeight="Bold"
                                       Margin="0,0,0,12"/>

                            <!-- ── Winrate récent ── -->
                            <TextBlock Text="Winrate récent"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="10" Margin="0,0,0,4"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- V / D / total -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock FontSize="11" FontWeight="SemiBold">
                                        <Run Text="{Binding RecentWins, Mode=OneWay}" Foreground="#3FB950"/>
                                        <Run Text=" V" Foreground="#4A3FB950"/>
                                    </TextBlock>
                                    <TextBlock Text="  " FontSize="11"/>
                                    <TextBlock FontSize="11" FontWeight="SemiBold">
                                        <Run Text="{Binding RecentLosses, Mode=OneWay}" Foreground="#F85149"/>
                                        <Run Text=" D" Foreground="#4AF85149"/>
                                    </TextBlock>
                                    <TextBlock Text="  " FontSize="11"/>
                                    <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}">
                                        <Run Text="{Binding RecentGames, Mode=OneWay}"/>
                                        <Run Text=" G"/>
                                    </TextBlock>
                                </StackPanel>
                                <!-- % -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding RecentWinRateDisplay}"
                                           Foreground="{Binding RecentWinRateHex, Converter={StaticResource HexBrush}}"
                                           FontSize="13" FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <!-- ── KDA moyen ── -->
                            <TextBlock Text="KDA moyen"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="10" Margin="0,0,0,4"/>
                            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,12">
                                <!-- Gros chiffre KDA -->
                                <TextBlock Text="{Binding RecentAvgKDADisplay}"
                                           Foreground="{Binding RecentAvgKDAHex, Converter={StaticResource HexBrush}}"
                                           FontSize="22" FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <!-- K / D / A breakdown -->
                                <TextBlock HorizontalAlignment="Center" FontSize="11">
                                    <Run Text="{Binding RecentAvgKillsDisplay,   Mode=OneWay}"
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Run Text=" / " Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{Binding RecentAvgDeathsDisplay,  Mode=OneWay}"
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Run Text=" / " Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{Binding RecentAvgAssistsDisplay, Mode=OneWay}"
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- ── CS/min & Durée ── -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- CS/min -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="CS/min"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="10" Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding RecentAvgCSPerMinDisplay}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="10">
                                        <Run Text="{Binding RecentAvgCSDisplay, Mode=OneWay}"/>
                                        <Run Text=" CS moy"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Durée -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Durée moy"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="10" Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding RecentAvgDurationDisplay}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="14" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>

                            <!-- ── Streak ── -->
                            <Grid Margin="0,0,0,14">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Streak actuel"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           FontSize="10" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding CurrentStreakDisplay}"
                                           Foreground="{Binding CurrentStreakHex, Converter={StaticResource HexBrush}}"
                                           FontSize="13" FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Séparateur -->
                            <Separator Margin="0,0,0,10"
                                       Visibility="{Binding HasChampionStats, Converter={StaticResource BoolVis}}"/>

                            <!-- ── PAR CHAMPION ── -->
                            <TextBlock Text="PAR CHAMPION"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="10" FontWeight="Bold"
                                       Margin="0,0,0,8"
                                       Visibility="{Binding HasChampionStats, Converter={StaticResource BoolVis}}"/>

                            <ItemsControl ItemsSource="{Binding TopChampionsFromHistory}"
                                          Visibility="{Binding HasChampionStats, Converter={StaticResource BoolVis}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="28"/>   <!-- Icône -->
                                                <ColumnDefinition Width="*"/>    <!-- Nom + barre -->
                                                <ColumnDefinition Width="Auto"/> <!-- KDA -->
                                            </Grid.ColumnDefinitions>

                                            <!-- Icône -->
                                            <Border Grid.Column="0"
                                                    Width="26" Height="26" CornerRadius="13"
                                                    ClipToBounds="True"
                                                    BorderBrush="#30FFFFFF" BorderThickness="1"
                                                    VerticalAlignment="Center">
                                                <Image Source="{Binding ChampionName, Converter={StaticResource ChampToImg}}"
                                                       Stretch="UniformToFill"/>
                                            </Border>

                                            <!-- Nom + V/D + barre winrate -->
                                            <StackPanel Grid.Column="1" Margin="7,0,6,0" VerticalAlignment="Center">
                                                <!-- Ligne nom + stats -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="32"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding ChampionName}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               FontSize="11" FontWeight="SemiBold"
                                                               TextTrimming="CharacterEllipsis"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1"
                                                               FontSize="10" VerticalAlignment="Center"
                                                               Margin="0,0,4,0">
                                                        <Run Text="{Binding Wins,   Mode=OneWay}" Foreground="#3FB950"/>
                                                        <Run Text="V " Foreground="#3FB95088"/>
                                                        <Run Text="{Binding Losses, Mode=OneWay}" Foreground="#F85149"/>
                                                        <Run Text="D" Foreground="#F8514988"/>
                                                    </TextBlock>
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding WinRateDisplay}"
                                                               Foreground="{Binding WinRateHex, Converter={StaticResource HexBrush}}"
                                                               FontSize="11" FontWeight="Bold"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                                <!-- Barre winrate bicolore -->
                                                <Grid Height="3" Margin="0,3,0,0">
                                                    <Border CornerRadius="1.5" Background="#20F85149"/>
                                                    <Border CornerRadius="1.5"
                                                            HorizontalAlignment="Left"
                                                            Background="{Binding WinRateHex, Converter={StaticResource HexBrush}}"
                                                            Width="{Binding WinBarWidth}"/>
                                                </Grid>
                                            </StackPanel>

                                            <!-- KDA -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding KdaDisplay}"
                                                       Foreground="{Binding KdaHex, Converter={StaticResource HexBrush}}"
                                                       FontSize="10" FontWeight="SemiBold"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </StackPanel>
                    </ScrollViewer>
                </Border>

            </Grid>
        </Grid>
    </Border>
</UserControl>
